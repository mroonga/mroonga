require_relative "../mroonga-package-task"

class MariaDB103MroongaPackageTask < MroongaPackageTask
  def initialize
    super("mariadb-10.3")
  end

  def apt_targets_default
    [
      "debian-buster",
    ]
  end

  def ubuntu_targets_default
    [
      ["focal", "20.04"],
      ["groovy", "20.10"],
    ]
  end

  def yum_targets_default
    [
      "centos-7",
      "centos-8",
    ]
  end
end

task = MariaDB103MroongaPackageTask.new
task.define
