require_relative "../mroonga-package-task"

class SourceMroongaPackageTask < MroongaPackageTask
  def initialize
    super("mroonga")
  end

  def built_package_url(target_namespace, target)
    url = "https://github.com/mroonga/mroonga/releases/download/v#{@version}/"
    url << "#{target}"
    url
  end

  def source_targets_default
    [
      "mroonga-#{@version}.tar.gz",
    ]
  end
end

task = SourceMroongaPackageTask.new
task.define
