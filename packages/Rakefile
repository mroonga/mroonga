packages = [
  "mariadb-server-10.2-mroonga",
  "mariadb-server-10.3-mroonga",
  "mariadb-server-10.4-mroonga",
  "mariadb-server-10.5-mroonga",
  "mysql-server-5.7-mroonga",
  "mysql-server-8.0-mroonga",
  "percona-server-5.7-mroonga",
  "percona-server-8.0-mroonga",
]

namespace :version do
  desc "Update versions"
  task :update do
    packages.each do |package|
      cd(package) do
        ruby("-S", "rake", "version:update")
      end
    end
  end
end

namespace :ubuntu do
  desc "Upload ubuntu packages"
  task :upload do
    packages.each do |package|
      cd(package) do
        ruby("-S", "rake", "ubuntu")
      end
    end
  end
end

desc "Release ubuntu repositories"
ubuntu_tasks = [
  "ubuntu:upload",
]
task :ubunut => ubuntu_tasks


[:apt, :yum].each do |target_namespace|
  namespace target_namespace do
    desc "Release #{target_namespace} packages"
    task :release do
      packages.each do |package|
        cd(package) do
          ruby("-S", "rake", "#{target_namespace}")
        end
      end
    end
  end

  desc "Release #{target_namespace} repositories"
  tasks = [
    "#{target_namespace}:release",
  ]
  task target_namespace => tasks
end
