packages = [
  "mariadb-server-10.2-mroonga",
  "mariadb-server-10.3-mroonga",
  "mariadb-server-10.4-mroonga",
  "mariadb-server-10.5-mroonga",
  "mysql-server-5.7-mroonga",
  "mysql-server-8.0-mroonga",
  "percona-server-5.7-mroonga",
  "percona-server-8.0-mroonga",
]

namespace :version do
  desc "Update versions"
  task :update do
    packages.each do |package|
      cd(package) do
        ruby("-S", "rake", "version:update")
      end
    end
  end
end

desc "Release ubuntu packages"
task :ubuntu do
  packages.each do |package|
    cd(package) do
      ruby("-S", "rake", "ubuntu")
    end
  end
end

[:apt, :yum].each do |target|
  desc "Release #{target_namespace} packages"
  task target_namespace do
    packages.each do |package|
      cd(package) do
        ruby("-S", "rake", target_namespace.to_s)
      end
    end
  end
end
