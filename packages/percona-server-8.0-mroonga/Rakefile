require_relative "../mroonga-package-task"

class PerconaServer80MroongaPackageTask < MroongaPackageTask
  def initialize
    super("percona-server-8.0")
  end

  def enable_apt?
    false
  end

  def enable_ubuntu?
    false
  end

  def yum_targets_default
    [
      "almalinux-8",
      "centos-7",
    ]
  end
end

task = PerconaServer80MroongaPackageTask.new
task.define
