--source ../../../include/mroonga/have_innodb.inc
--source ../../../include/mroonga/have_mroonga.inc

--disable_warnings
DROP TABLE IF EXISTS books;
--enable_warnings

CREATE TABLE books (
  id INT PRIMARY KEY,
  email VARCHAR(255),
  title TEXT,
  INDEX email_index (email),
  FULLTEXT INDEX title_ft_index (title)
) DEFAULT CHARSET = UTF8MB4 COMMENT = 'ENGINE "InnoDB"';

INSERT INTO books VALUES(1, "abc@example.com", "Learn MySQL internal");
INSERT INTO books VALUES(2, "def@example.com", "Database basics");

SELECT id FROM books WHERE id = 2;
SELECT email FROM books WHERE email = "def@example.com";
SELECT title FROM books WHERE MATCH(title) AGAINST("+MySQL" IN BOOLEAN MODE);

DROP TABLE books;

--source ../../../include/mroonga/have_mroonga_deinit.inc
