DROP TABLE IF EXISTS books;
CREATE TABLE books (
id INT PRIMARY KEY,
email VARCHAR(255),
title TEXT,
INDEX email_index (email),
FULLTEXT INDEX title_ft_index (title)
) DEFAULT CHARSET = UTF8MB4 COMMENT = 'ENGINE "InnoDB"';
