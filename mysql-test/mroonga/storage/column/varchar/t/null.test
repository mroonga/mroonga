--disable_warnings
DROP TABLE IF EXISTS users;
--enable_warnings

CREATE TABLE users (
  id INT,
  name VARCHAR(5) NULL
) DEFAULT CHARSET=utf8mb4;

INSERT INTO users VALUES (1, '');
INSERT INTO users VALUES (2, NULL);
INSERT INTO users VALUES (3, 'alice');

SELECT id FROM users where name = '';

DROP TABLE users;

