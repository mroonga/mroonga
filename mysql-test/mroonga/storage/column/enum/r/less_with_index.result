DROP TABLE IF EXISTS items;
CREATE TABLE items (
name VARCHAR(255),
size ENUM("small", "medium", "large"),
INDEX (size)
) ENGINE=Mroonga DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_unicode_ci;
