DROP TABLE IF EXISTS diaries;
CREATE TABLE diaries (
id int PRIMARY KEY AUTO_INCREMENT,
body text,
FULLTEXT INDEX body_index (body)
COMMENT 'tokenizer "TokenMecab"'
) DEFAULT CHARSET utf8mb4;
INSERT INTO diaries (body) VALUES ("12/12 東京都の天気は晴れ。");
INSERT INTO diaries (body) VALUES ("12/12 京都の天気は雨。");
SELECT * FROM diaries;
id	body
1	12/12 東京都の天気は晴れ。
2	12/12 京都の天気は雨。
SELECT * FROM diaries
WHERE MATCH(body) AGAINST("+東京都" IN BOOLEAN MODE)
ORDER BY id;
id	body
1	12/12 東京都の天気は晴れ。
DROP TABLE diaries;
