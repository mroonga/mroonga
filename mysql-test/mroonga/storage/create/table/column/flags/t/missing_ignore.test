--disable_query_log
DROP DATABASE test;
CREATE DATABASE test;
USE test;
--enable_query_log

CREATE TABLE tags (
  name VARCHAR(64) PRIMARY KEY
) DEFAULT CHARSET=utf8mb4;

CREATE TABLE bugs (
  tags TEXT COMMENT 'flags "COLUMN_VECTOR|MISSING_IGNORE", type "tags"'
) DEFAULT CHARSET=utf8mb4;

INSERT INTO tags VALUES ('existent1'), ('existent2');

INSERT INTO bugs VALUES ('["existent1", "nonexistent", "existent2"]');

SELECT mroonga_command('dump --dump_plugins no');

SELECT * FROM bugs;
SELECT * FROM tags;

DROP TABLE bugs;
DROP TABLE tags;

