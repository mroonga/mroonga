# MySQL doesn't use condition push down with test case.
# qep_tab->type() is JT_FT in make_join_readinfo().
--source ../../../../include/mroonga/have_mariadb.inc
--source ../../../../include/mroonga/have_mroonga.inc
--source ../../../../include/mroonga/have_flush_global_status.inc

--disable_warnings
DROP TABLE IF EXISTS memos;
--enable_warnings

# Normalize FLUSH STATUS output for MariaDB version compatibility
--replace_result "FLUSH GLOBAL STATUS" "FLUSH STATUS"
--eval $flush_status_command

SET NAMES UTF8MB4;
CREATE TABLE memos (
  content TEXT,
  tag varchar(256),
  FULLTEXT INDEX (content),
  KEY (tag)
) DEFAULT CHARSET UTF8MB4;

INSERT INTO memos VALUES ('Groonga is fast', 'Groonga');
INSERT INTO memos VALUES ('Fast embeddable full text search engine', 'Groonga');
INSERT INTO memos VALUES ('Mroonga is fast', 'Mroonga');
INSERT INTO memos VALUES ('Groonga + MySQL', 'Mroonga');

--disable_ps_protocol
SELECT *
  FROM memos
  WHERE MATCH(content) AGAINST('+Groonga' IN BOOLEAN MODE) AND
        tag IN ('Groonga', 'Mroonga');
--enable_ps_protocol

SHOW STATUS LIKE 'mroonga_condition_push_down';

DROP TABLE memos;

--source ../../../../include/mroonga/have_mroonga_deinit.inc
