DROP TABLE IF EXISTS memos;
FLUSH STATUS;
SET NAMES UTF8MB4;
CREATE TABLE memos (
id INT UNSIGNED,
content TEXT,
FULLTEXT INDEX(content)
) DEFAULT CHARSET UTF8MB4;
INSERT INTO memos VALUES(1, "Groonga is a full text search engine.");
