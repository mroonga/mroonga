INSERT INTO memos VALUES(3, "Mroonga can work with MariaDB.");
INSERT INTO memos VALUES(4, "Groonga is great!");
SELECT * FROM memos
WHERE MATCH(content) AGAINST("+Groonga" IN BOOLEAN MODE) AND
id NOT IN (1, 2)
ORDER BY id;
