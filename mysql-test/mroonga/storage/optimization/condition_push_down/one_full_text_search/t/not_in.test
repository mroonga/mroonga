# MySQL doesn't use condition push down with test case.
# qep_tab->type() is JT_FT in make_join_readinfo().
--source ../../../../../include/mroonga/have_mariadb.inc
--source ../../../../../include/mroonga/have_mroonga.inc
--source ../../../../../include/mroonga/flush_status.inc

--disable_warnings
DROP TABLE IF EXISTS memos;
--enable_warnings

FLUSH GLOBAL STATUS;

SET NAMES UTF8MB4;
CREATE TABLE memos (
  id INT UNSIGNED,
  content TEXT,
  FULLTEXT INDEX(content)
) DEFAULT CHARSET UTF8MB4;

INSERT INTO memos VALUES(1, "Groonga is a full text search engine.");
INSERT INTO memos VALUES(2, "Mroonga is Groonga + MySQL.");
INSERT INTO memos VALUES(3, "Mroonga can work with MariaDB.");
INSERT INTO memos VALUES(4, "Groonga is great!");

--disable_ps_protocol
SELECT * FROM memos
 WHERE MATCH(content) AGAINST("+Groonga" IN BOOLEAN MODE) AND
       id NOT IN (1, 2)
 ORDER BY id;
--enable_ps_protocol

SHOW STATUS LIKE 'mroonga_condition_push_down';

DROP TABLE memos;

--source ../../../../../include/mroonga/have_mroonga_deinit.inc
