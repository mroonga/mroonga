INSERT INTO memos VALUES (2018, 12, 'Groonga + MySQL');
SET mroonga_condition_push_down_type = ALL;
SELECT *
FROM memos
WHERE (MATCH(content) AGAINST('+Groonga' IN BOOLEAN MODE) AND
month = 11) OR
year = 2018;
