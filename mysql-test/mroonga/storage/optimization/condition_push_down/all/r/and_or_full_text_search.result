DROP TABLE IF EXISTS memos;
FLUSH STATUS;
SET NAMES UTF8MB4;
CREATE TABLE memos (
year int,
month int,
content TEXT,
FULLTEXT INDEX (content)
) DEFAULT CHARSET UTF8MB4;
