DROP TABLE IF EXISTS memos;
SET NAMES UTF8MB4;
CREATE TABLE memos (
content TEXT,
category_id int,
FULLTEXT INDEX (content),
KEY (category_id)
) DEFAULT CHARSET UTF8MB4;
