DROP TABLE IF EXISTS memos;
FLUSH STATUS;
SET NAMES UTF8MB4;
CREATE TABLE memos (
content TEXT,
tag varchar(256),
FULLTEXT INDEX (content),
KEY (tag)
) DEFAULT CHARSET UTF8MB4;
