# Order limit optimization requires condition push down but
# MySQL doesn't use condition push down with test case.
--source ../../../../../../include/mroonga/have_mariadb.inc
--source ../../../../../../include/mroonga/have_mroonga.inc
--source ../../../../../../include/mroonga/have_flush_global_status.inc

--disable_warnings
DROP TABLE IF EXISTS memos;
--enable_warnings

# Normalize FLUSH STATUS output for MariaDB version compatibility
--replace_result "FLUSH GLOBAL STATUS" "FLUSH STATUS"
--eval $flush_status_command

SET NAMES UTF8MB4;
CREATE TABLE memos (
  id INT UNSIGNED NOT NULL,
  writing_time TIME,
  content TEXT,
  FULLTEXT INDEX(content),
  KEY(writing_time)
) DEFAULT CHARSET UTF8MB4;

INSERT INTO memos VALUES(1, "1:23:30", "Today is fine.");
INSERT INTO memos VALUES(2, "1:23:31", "Today's lucky item is flower!"  );
INSERT INTO memos VALUES(3, "1:23:32", "I will do something today!");
INSERT INTO memos VALUES(4, "1:23:33", "I don't want to anything today...");
INSERT INTO memos VALUES(5, "1:23:34", "I'm sleepy today.");

--disable_ps_protocol
SELECT * FROM memos
         WHERE MATCH(content) AGAINST("today" IN BOOLEAN MODE) AND
               writing_time > "1:23:31"
         ORDER BY id LIMIT 1,2;
--enable_ps_protocol

SHOW STATUS LIKE 'mroonga_fast_order_limit';

DROP TABLE memos;

--source ../../../../../../include/mroonga/have_mroonga_deinit.inc
