SELECT id,
name,
MATCH(name) AGAINST('+user' IN BOOLEAN MODE) as score
FROM users
WHERE MATCH(name) AGAINST('+user' IN BOOLEAN MODE) AND
id IN (SELECT user_id
FROM diaries
WHERE MATCH(title) AGAINST('+name' IN BOOLEAN MODE))
ORDER BY score DESC
LIMIT 2;
