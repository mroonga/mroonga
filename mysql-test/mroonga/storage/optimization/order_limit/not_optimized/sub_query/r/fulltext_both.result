DROP TABLE IF EXISTS diaries, users;
FLUSH STATUS;
SET NAMES utf8mb4;
CREATE TABLE users (
id INT PRIMARY KEY AUTO_INCREMENT,
name TEXT,
FULLTEXT INDEX (name)
) DEFAULT CHARSET utf8mb4;
CREATE TABLE diaries (
id INT PRIMARY KEY AUTO_INCREMENT,
user_id INT UNSIGNED NOT NULL,
title TEXT,
FULLTEXT INDEX (title)
) DEFAULT CHARSET utf8mb4;
