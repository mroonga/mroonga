SELECT *
FROM messages
WHERE channel_id IN
(SELECT channels.id
FROM channels
INNER JOIN permissions ON channels.id = permissions.channel_id
WHERE permissions.user_id = 31)
AND match(content) against('*D+ message' IN BOOLEAN MODE)
AND id > 40
ORDER BY id DESC
LIMIT 2;
