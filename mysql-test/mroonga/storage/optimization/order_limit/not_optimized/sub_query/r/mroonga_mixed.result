FLUSH STATUS;
CREATE TABLE channels (
id int PRIMARY KEY,
name varchar(255)
);
CREATE TABLE permissions (
id int PRIMARY KEY,
channel_id int,
user_id int
);
CREATE TABLE messages (
id int PRIMARY KEY,
channel_id int,
content varchar(512),
FULLTEXT KEY (content)
);
