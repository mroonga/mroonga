FLUSH STATUS;
SET NAMES utf8mb4;
CREATE TABLE users (
user_id INT UNSIGNED,
sort_order INT
) ENGINE=InnoDB;
CREATE TABLE memos (
id INT UNSIGNED,
user_id INT UNSIGNED,
content TEXT,
FULLTEXT INDEX(content)
) DEFAULT CHARSET utf8mb4;
