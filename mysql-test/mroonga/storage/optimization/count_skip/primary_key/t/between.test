--source ../../../../../include/mroonga/have_flush_global_status.inc

--disable_warnings
DROP TABLE IF EXISTS users;
--enable_warnings

# Normalize FLUSH STATUS output for MariaDB version compatibility
--replace_result "FLUSH GLOBAL STATUS" "FLUSH STATUS"
--eval $flush_status_command

CREATE TABLE users (
  id INT PRIMARY KEY
) DEFAULT CHARSET=UTF8MB4;

INSERT INTO users (id) VALUES (1);
INSERT INTO users (id) VALUES (2);
INSERT INTO users (id) VALUES (3);
INSERT INTO users (id) VALUES (4);
INSERT INTO users (id) VALUES (5);
INSERT INTO users (id) VALUES (6);
INSERT INTO users (id) VALUES (7);
INSERT INTO users (id) VALUES (8);
INSERT INTO users (id) VALUES (9);

--disable_ps_protocol
SELECT COUNT(*) FROM users WHERE id BETWEEN 2 AND 4;
--enable_ps_protocol

SHOW STATUS LIKE 'mroonga_count_skip';

DROP TABLE users;

